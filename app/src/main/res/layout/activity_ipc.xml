<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IPCActivity">

    <TextView
        android:id="@+id/text_ipc_devinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/light_blue_900"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextureView
        android:id="@+id/textureView_ipc"
        android:layout_marginTop="20dp"
        android:layout_width="390dp"
        android:layout_height="520dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ipc_devinfo" />

    <Button
        android:id="@+id/btn_ipc_call"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:text="强提醒消息"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textureView_ipc" />

</androidx.constraintlayout.widget.ConstraintLayout>